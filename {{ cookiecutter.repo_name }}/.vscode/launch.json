{
	"version": "0.2.0",
	"configurations": [
		// Debug the main application entry point
		{
			"name": "Debug Main",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/{{ cookiecutter.module_name }}/main.py",
			"console": "integratedTerminal"
		},
		// Debug the currently active file
		{
			"name": "Debug Current File",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal"
		}
	]
}
